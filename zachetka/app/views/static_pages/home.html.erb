<% if logged_in? %>
    <div class="row">
        <aside class="col-md-4">
            <section class="user_info">
                <%= render 'shared/user_info' %>
            </section>
            <section class="micropost_form">
                <%= render 'shared/micropost_form' %>
            </section>
        </aside>
    </div>
<% else %>
    <div class="center jumbotron">
        <h1>Добро пожаловать на QShak</h1>
        <h2>
            Зарегистрируйтесь сейчас, если Вы тут впервые
        </h2>
        <%= link_to "Зарегистрироваться!", signup_path, class: "btn btn-lg btn-primary" %>
    </div>
<% end %>